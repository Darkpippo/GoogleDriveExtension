{
  "manifest_version": 3,
  "name": "Google Drive Search Extension",
  "version": "1.0",
  "description": "A Chrome extension to search through Google Drive using an API key.",
  "permissions": [
    "contextMenus",
    "identity",
    "storage",
    "activeTab"

  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/logo_image.png",
      "48": "icons/logo_image.png",
      "128": "icons/logo_image.png"
    }
  },
  "icons": {
    "16": "icons/logo_image.png",
    "48": "icons/logo_image.png",
    "128": "icons/logo_image.png"
  },
  "oauth2": {
    "client_id": "1080265799924-0kcmth0gimjnkahb63gd8e9rbdf6un4m.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/drive.metadata.readonly"
    ]
  }
}
